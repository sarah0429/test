<!--miniprogram/pages/test01/test01.wxml-->
<form bindsubmit="onSave">

  <form-group class="margin-top">
    <view class='title'>业主名字</view>
    <input placeholder="2-6个汉字" class='radius align-right' name='name' bindblur='checkName' bindinput='checkName' focus='true'></input>
  </form-group>

  <view class='warn'>{{warnText}}</view>

  <view class="padding flex flex-direction">
    <button class='bg-green margin-tb-sm lg' form-type="submit">保存</button>
  </view>

</form>