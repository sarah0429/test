/* pages/userCenter/userCenter.wxss */
.button-top{
  padding-top:3rpx ;
  display: block
}

.icon-bottom{
  margin-bottom:4rpx;
}

.userinfo {
  height: 450rpx;
  width: 100%;
  background-image: url('https://img.500px.me/photo/0280e033241548c489a8950670cc86008/5c409706bbfd4187953289322dc923b3.jpg!p5');
  background-size: 100% 100%;
  position:relative;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 300ms ease;
  box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2); 
}

.userinfo-avatar {
  overflow: hidden;
  display: block;
  width: 180rpx;
  height: 180rpx;
  margin: 15rpx;
  margin-top: 85rpx;
  border-radius: 50%;
  border: 2px solid #fff;
}

.userinfo-nickname {
  padding: 15rpx;
  font-size: 40rpx;
  color: white;
}

.user-nav {
  overflow: hidden;
  margin-top: 20rpx;
  border: 1px solid rgba(0, 0, 0, 0.1);
}


